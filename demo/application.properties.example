# application.properties - EJEMPLO PARA RENDER
# NO EDITAR ESTE ARCHIVO DIRECTAMENTE
# Configurar las variables de entorno en Render Dashboard

# Configuración de la base de datos (usar variables de entorno en Render)
spring.datasource.url=${DATABASE_URL}
spring.datasource.username=${DB_USERNAME}
spring.datasource.password=${DB_PASSWORD}
spring.datasource.driver-class-name=com.mysql.cj.jdbc.Driver

# Hibernate
spring.jpa.hibernate.ddl-auto=update
spring.jpa.show-sql=false
spring.jpa.properties.hibernate.dialect=org.hibernate.dialect.MySQL8Dialect
spring.jpa.properties.hibernate.format_sql=true

# Puerto del servidor (Render usa variables de entorno)
server.port=${PORT:8080}

# JWT Secret (configurar en Render)
jwt.secret=${JWT_SECRET:miClaveSecretaSuperSegura12345}

# MercadoPago (configurar en Render)
spring.mercadopago.access-token=${MERCADOPAGO_ACCESS_TOKEN:tu_access_token_aqui}

# Configuración de archivos
spring.servlet.multipart.max-file-size=10MB
spring.servlet.multipart.max-request-size=10MB

# Logging
logging.level.root=INFO
logging.level.com.example.demo=DEBUG
